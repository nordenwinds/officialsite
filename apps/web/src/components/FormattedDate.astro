---
interface Props {
    date: Date;
    isoFormat?: boolean;
    dayOfWeek?: boolean;
}

const { date, isoFormat = true, dayOfWeek = false } = Astro.props;
---

<time datetime={date.toISOString()}>
    {
        date
            .toLocaleDateString('ja-jp', {
                year: 'numeric',
                month: isoFormat ? '2-digit' : 'long',
                day: isoFormat ? '2-digit' : 'numeric',
                weekday: dayOfWeek ? 'short' : undefined,
            })
            .split('/')
            .join('-')
    }
</time>
