---
interface Props {
    date: Date;
    dayOfWeek?: boolean;
}

const { date, dayOfWeek = false } = Astro.props;
---

<time datetime={date.toISOString()}>
    {
        date
            .toLocaleDateString('ja-jp', {
                year: 'numeric',
                month: '2-digit',
                day: '2-digit',
                weekday: dayOfWeek ? 'short' : undefined,
            })
            .split('/')
            .join('-')
    }
</time>
