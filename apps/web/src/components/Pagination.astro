---
import type { Page } from 'astro';

interface Props {
    page: Page;
}

const { page } = Astro.props;
---

<div class="flex w-full flex-row">
    {
        page.url.prev ? (
            <div class="aspect-square w-8 rounded-full bg-primary-dark text-white">
                <a href={page.url.prev}>
                    <svg
                        fill="none"
                        stroke="currentColor"
                        stroke-width="1.5"
                        viewBox="0 0 24 24"
                        xmlns="http://www.w3.org/2000/svg"
                        aria-hidden="true"
                    >
                        <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5L8.25 12l7.5-7.5" />
                    </svg>
                </a>
            </div>
        ) : null
    }
    <div class="grow"></div>
    {
        page.url.next ? (
            <div class="aspect-square w-8 rounded-full bg-primary-dark text-white">
                <a href={page.url.next}>
                    <svg
                        fill="none"
                        stroke="currentColor"
                        stroke-width="1.5"
                        viewBox="0 0 24 24"
                        xmlns="http://www.w3.org/2000/svg"
                        aria-hidden="true"
                    >
                        <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
                    </svg>
                </a>
            </div>
        ) : null
    }
</div>
